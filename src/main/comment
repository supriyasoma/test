@Test
    public void testEditImage() throws IOException {
        String recipeId = "123";
        MockMultipartFile thumbnailImage = new MockMultipartFile("thumbnailImage", "image.jpg", "image/jpeg", new byte[0]);

        ResponseEntity<String> responseEntity = userController.editImage(recipeId, thumbnailImage);

        verify(recipeService, times(1)).editImage(recipeId, thumbnailImage);
        assertEquals(HttpStatus.OK, responseEntity.getStatusCode());
        assertEquals("UPDATED RECIPE_SUCCESSFULLY " + recipeId, responseEntity.getBody());
    }

    @Test
    public void testAddCommentToRecipe() {
        String recipeId = "123";
        String userName = "test_user";
        Comment comment = new Comment("This is a test comment");

        ResponseEntity<?> responseEntity = userController.addCommentToRecipe(recipeId, userName, comment);

        verify(recipeService, times(1)).addCommentToRecipe(recipeId, userName, comment);
        assertEquals(HttpStatus.OK, responseEntity.getStatusCode());
        assertEquals("POSTED_COMMENT_SUCCESSFULLY", responseEntity.getBody());
    }
