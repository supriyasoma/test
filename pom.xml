public boolean isValid() {
    try {
        // Create a SchemaFactory with secure processing enabled
        SchemaFactory factory = SchemaFactory.newInstance(XMLConstants.W3C_XML_SCHEMA_NS_URI);
        factory.setFeature(XMLConstants.FEATURE_SECURE_PROCESSING, true);

        // Load the schema file as a resource from the classpath
        InputStream schemaStream = this.getClass().getClassLoader().getResourceAsStream(xsdPath);
        if (schemaStream == null) {
            throw new IOException("Schema file not found: " + xsdPath);
        }

        // Create a Schema using the schema file
        Schema schema = factory.newSchema(new StreamSource(schemaStream));

        // Create a Validator
        Validator validator = schema.newValidator();

        // Validate the XML content
        validator.validate(new StreamSource(new StringReader(getContent())));

        return true;
    } catch (IOException | SAXException | TransformerException e) {
        log.error(e.getMessage(), e);
        return false;
    }
}
